<!--コメント一覧-->
<p>コメント件数：<%= post.post_comments.count %>件</p>
<ul class="list-group">
<% post.post_comments.each do |post_comment| %>
  <li class="list-group-item">
    <%= post_comment.user.name %>さんのコメント<br />
    <%= l post_comment.created_at, format: :long %><br />
    &nbsp;<%= post_comment.comment %>
    <% if post_comment.user == current_user %>
      <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, remote: true %>
    <% end %>
  </li>
<% end %>
</ul>
<h4>検索フォーム</h4>

<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="form-group pt-3">
    <%= f.label :content, "検索内容" %><br />
    <%= f.text_field :content, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :model, "検索対象" %><br />
    <%= f.select :model, {'投稿': 'post', 'ユーザー': 'user'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>
  <div class="form-group">
    <%= f.label :method, "検索方法" %><br />
    <%= f.select :method, {'部分一致': 'part', '完全一致': 'perfect'}, { include_blank: '選択してください'}, { class: 'form-control' , required: true } %>
  </div>
  <div class="actions text-center">
    <%= f.submit '検索', class: "btn btn-success btn-block" %>
  </div>
<% end %>
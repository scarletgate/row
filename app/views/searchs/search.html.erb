<div class="container">
  <div class="row">
    <div class="col-md-3 py-3">
      <%= render 'searchs/search_form' %>
    </div>
    <div class="col-md-8 offset-md-1 mx-auto py-3">
      <% if @model == 'user' %>
        <h5>【検索対象】ユーザー</h5>
        <h5>【検索ワード】<%= @content %></h5>
        <%= render 'relationships/index', users: @records %>
      <% else @model == 'post' %>
        <h5>【検索対象】投稿（タイトル）</h5>
        <h5>【検索ワード】<%= @content %></h5>
        <%= render 'posts/index', posts: @records %>
      <% end %>
    </div>
  </div>
</div>
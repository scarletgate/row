<div class="container">
  <div class="row">
    <div class="col-md-4">
      <%= render 'users/user_info', user: @user, favorite_posts: @favorite_posts %>
    </div>
    <div class="col-md-7 offset-md-1">
      <h5>投稿記事</h5>
      <%= link_to '新規投稿', new_post_path %>
        <ul class="list-group">
        <% @posts.each do |post| %>
          <li class="list-group-item">
            <%= link_to post.title, post_path(post.id) %><br />
            いいね：<%= post.favorites.count %>件　コメント：<%= post.post_comments.count %>件<br />
            <%= post.created_at %>に投稿 &nbsp; <%= post.updated_at %>に更新<br />
          </li>
        <% end %>
        </ul>
    </div>
  </div>
</div>
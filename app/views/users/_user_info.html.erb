<h5>会員情報</h5>
<%#= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no-image.jpg" %>
<table class="table">
  <tbody>
    <tr>
      <th>ニックネーム</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>自己紹介</th>
      <th><%= user.introduction %></th>
    </tr>
    <tr>
      <th>フォロー</th>
      <th></th>
    </tr>
    <tr>
      <th>フォロワー</th>
      <th></th>
    </tr>
    <tr>
      <th>
        <% if user == current_user %>
          <%= link_to "プロフィールを編集する", edit_user_path(user), class: "btn btn-secondary" %>
        <% else %>
        <% end %>
      </th>
    </tr>
  </tbody>

</table>
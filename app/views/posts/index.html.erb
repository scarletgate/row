<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-10 col-lg-8 px-5 px-sm-0 mx-auto">
      <h3>投稿一覧</h3>
      <table class="table">
        <thead>
          <tr>
            <th>タイトル</th>
            <th>投稿内容</th>
            <th>コメント</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td>
              <%= link_to post.title, post_path(post.id) %><br />
              <%= post.content %>
            </td>
            <td></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto py-3">
      <h3 class="pb-3">お問い合わせ内容確認</h3>
      <div>
        <p>【名前】<%= @inquiry.name %><p>
      </div>
      <div>
        <p>【メールアドレス】<%= @inquiry.email %><p>
      </div>
      <div>
        <p>【件名】<%= @inquiry.subject_i18n %><p>
      </div>
      <div>
        <p>【お問い合わせ内容】<p>
        <p><%= safe_join(@inquiry.message.split("\n"),tag(:br)) %></p>
      </div>
      <%= form_with model: @inquiry, url: back_path, class: "py-3", local: true do |f| %>
        <%=f.hidden_field :name %>
        <%=f.hidden_field :email %>
        <%=f.hidden_field :subject %>
        <%=f.hidden_field :message %>
        <%= f.submit '入力画面へ戻る', class: "btn btn-secondary btn-block" %>
      <% end %>
      <%= form_with model: @inquiry, local: true do |f| %>
        <%=f.hidden_field :name %>
        <%=f.hidden_field :email %>
        <%=f.hidden_field :subject %>
        <%=f.hidden_field :message %>
        <%= f.submit '送信', class: "btn btn-success btn-block" %>
      <% end %>
    </div>
  </div>
</div>